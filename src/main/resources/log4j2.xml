<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}(%L) - %msg%n" />
		</Console>
		<File name="File" fileName="/hdfs/logs/xml2xpath.log" immediateFlush="false"
			append="false">
			<PatternLayout
				pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36}(%L) - %msg%n" />
		</File>
	</Appenders>
	<Loggers>
         <Logger name="iox.accumulo.d4m" level="INFO">
            <AppenderRef ref="Console" />
        </Logger>       
        <Logger name="iox.xml2xpath" level="INFO">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Logger>		
        <Logger name="iox.utils" level="DEBUG">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Logger>       
<!--         <Logger name="iox.xml2xpath.XML2XPathReducer" level="TRACE">
            <AppenderRef ref="Console" />
        </Logger>    -->    
        <Logger name="org.apache.hadoop.mapred" level="ERROR">
            <AppenderRef ref="Console" />
        </Logger>
		<Root level="INFO">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File" />
		</Root>
	</Loggers>
</Configuration>
